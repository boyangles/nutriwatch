<h1>This is for Dietary Violations</h1>

<table style="width:50%">
  <tr align="left">
    <th>Ingredient Name</th>
    <th>Dietary Violation</th>
  </tr>

  <% @dietaryviolations.each do |dietaryviolation| %>
    <tr align="left">
      <td><%= dietaryviolation.ingredient %></td>
      <td><%= dietaryviolation.diet %></td>
    </tr>
  <% end %>
</table>
