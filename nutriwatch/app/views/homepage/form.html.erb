<h1>Filters<h1>
<!-- 
	Filter by:
		Restaurant Name (Wildcard name)
		Cuisine (Checkmarks // all or many)
		Diet (Checkmarks // none or many)
		Calories (range)
		Rating (range)
		Dish (Wildcard name)
-->


<form class="form-horizontal">

	<div class="container">
		<div class="row">
			<div class="form-group"> <!-- Restaurant Name -->
				<label for="full_restaurant_id requiredField" class="control-label col-sm-2">Restaurant</label>
				<div class="col-sm-8">
					<input type="text" class="form-control w3-text-blue" id="full_restaurant_id" name="full_restaurant" placeholder="Restaurant Name">
				</div>  
			</div>
		</div>

		<div class="row">
			<div class="form-group"><!-- Cuisine Name -->
				<label class="control-label col-sm-2">Cuisine</label>
					<div class="col-sm-8">


						<div class="row">
							<div class="checkbox">
								<label>
									<input type="checkbox" name="cuisine_choices" value="American">
									American
								</label>
								<label>
									<input type="checkbox" name="cuisine_choices" value="Chinese">
									Chinese
								</label>
							</div>
						</div>

						<div class="row">
							<div class="checkbox">
								<label>
									<input type="checkbox" name="cuisine_choices" value="Mexican">
									Mexican
								</label>
							</div>
						</div>




					</div>
			</div>
		</div>
	</div>						
	 
	<div class="form-group"> <!-- Submit Button -->
		<div class="col-sm-10 col-sm-offset-2">                     
			<button type="submit" class="btn btn-primary">Get Updates!</button>
		</div>
	</div>        
	 
</form>  

