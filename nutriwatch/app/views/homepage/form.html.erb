<%= provide(:title, 'Filters') %>
<h1>Filters<h1>
<!-- 
	Filter by:
		Restaurant Name (Wildcard name)
		Cuisine (Checkmarks // all or many)
		Diet (Checkmarks // none or many)
		Calories (range)
		Rating (range)
		Dish (Wildcard name)
-->
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<%= form_for(@homepage, url: form_path) do |f| %>
  	# <%= render 'shared/error_messages_form' %>
  	  <%= f.label :dname, "Dish Name" %>
        <%= f.text_field :d_name %>

      <%= f.label :rname, "Restaurant Name" %>
        <%= f.text_field :r_name %>

      <%= f.label :cuisine_name, "Cuisine" %>
		<%= f.collection_check_boxes :ids, Restaurantcuisine.all, :id, :cuisine do |b| %>
    	<div class="collection-check-box">
      		<%= b.check_box %>
      		<%= b.label %>
    	</div>
        <% end %>

      <%= f.label :violation_name, "Dietary Restriction" %>
        <%= f.collection_check_boxes :dietaryviolation_ids, Dietaryviolation.all, :id, :diet do |b| %>
    	<div class="collection-check-box">
      		<%= b.check_box %>
      		<%= b.label %>
    	</div>
        <% end %>

      
	  <%= f.label "Calories"%>
      	<%= form_for :homepage,  url: form_path do |cal| %>  	
      		<div id="calorie_slider"></div>
    		<%= cal.hidden_field :cal_data1 %>
    		<%= cal.hidden_field :cal_data2 %>
		<% end %>

	  <%= f.label "Rating"%>
      	<%= form_for :homepage,  url: form_path do |rate| %>
      		<div id="rating_slider"></div>
    		<%= rate.hidden_field :rate_data1 %>
    		<%= rate.hidden_field :rate_data2 %>
		<% end %>

	  <%= f.label "Price Range"%>
      	<%= form_for :homepage,  url: form_path do |price| %>
      		<div id="price_slider"></div>
    		<%= price.hidden_field :price_data1 %>
    		<%= price.hidden_field :price_data2 %>
		<% end %>

	<%= f.submit "Filter my shiz!", class: "btn btn-primary" %>
        
    <% end %>

  </div>
</div>


